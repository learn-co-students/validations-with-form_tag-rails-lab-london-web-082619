
<% if @author.errors.full_messages.length > 0 %>
<h2> <%= pluralize(@author.errors.full_messages.length , "error") %> prohibited this author from being created</h2>
<ul>
  <% @author.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
  <% end %>
</ul>
<% end %>


<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number" %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
